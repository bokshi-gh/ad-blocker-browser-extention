{
  "manifest_version": 3,
  "name": "AIDS Blocker",
  "description": "A fast, lightweight, and privacy-friendly ad blocker.",
  "version": "1.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon48.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles/content.css"]
    }
  ],
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "webRequest",
    "notifications"
  ],
  "host_permissions": ["<all_urls>"]
}

