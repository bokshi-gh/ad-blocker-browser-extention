{
  "name": "AIDS Blocker",
  "version": "1.0",
  "manifest_version": 3,
  "description": "A fast, lightweight, and privacy-friendly ad blocker.",
  "permissions": ["declarativeNetRequest"],
  "host_permissions": ["<all_urls>"],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "cross.adblocker@example.com",
      "strict_min_version": "91.0"
    }
  },

  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}
